<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.badlogic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/icon_logo"
        android:label="@string/app_name" >
        <activity
            android:name=".socketchatter.IPScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/RollActivityTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".socketchatter.SendFeed"
            android:windowSoftInputMode="adjustUnspecified|adjustResize" >
        </activity>
        <activity android:name=".socketchatter.mouseActivity" />
        <activity android:name=".socketchatter.ControlPCActivity" >
        </activity>

        <service android:name=".socketchatter.MainService" >
        </service>
    </application>

</manifest>